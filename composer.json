{
    "name": "dimadeush/docker-nginx-php-laravel",
    "type": "project",
    "description": "Docker laravel environment",
    "keywords": [
        "Docker",
        "Nginx",
        "Php",
        "Laravel",
        "Supervisord",
        "MySQL"
    ],
    "homepage": "https://github.com/dimadeush/docker-nginx-php-laravel",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Dmitriy Kravtsov",
            "email": "dimitriy_k@ukr.net",
            "homepage": "https://github.com/dimadeush",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/dimadeush/docker-nginx-php-laravel/issues"
    },
    "require": {
        "php": "^7.4.0",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "fideloper/proxy": "^4.0",
        "jaybizzle/laravel-migrations-organiser": "^4.2",
        "laravel/framework": "^6.5",
        "laravel/tinker": "^2.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.3",
        "roave/security-advisories": "dev-master",
        "barryvdh/laravel-ide-helper": "^2.6",
        "neronmoon/scriptsdev": "^0.1",
        "facade/ignition": "^1.4",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^3.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        },
        "laravel": {
            "dont-discover": [
            ]
        },
        "scripts-dev": {
            "post-update-cmd": [
                "php artisan ide-helper:generate",
                "php artisan ide-helper:meta"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "if test -d vendor/bamarni/composer-bin-plugin; then composer bin all install; fi"
        ],
        "post-update-cmd": [
            "if test -d vendor/bamarni/composer-bin-plugin; then composer bin all update; fi"
        ]
    },
    "config": {
        "platform": {
            "php": "7.4.0"
        },
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
